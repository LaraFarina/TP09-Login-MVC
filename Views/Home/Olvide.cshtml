@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<h1>¿Olvidaste tu contraseña?</h1>
<p>Ingresa tu dirección de correo electrónico y tu respuesta personal y te enviaremos un enlace para restablecer tu contraseña.</p>

<form asp-action="Olvide" method="post">
    <label for="Email">Correo Electrónico:</label>
    <input type="email" id="Email" name="Email" required><br>
    <label for="PreguntaPersonal">Respuesta Personal:</label>
    <input type="text" id="PreguntaPersonal" name="PreguntaPersonal" required><br>
    <button type="submit">Enviar Correo</button>
</form>